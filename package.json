{
  "name": "@0x-jerry/x",
  "version": "2.12.4",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/0x-jerry/x.git"
  },
  "author": "Jerry Wang <x.jerry.wang@gmail.com>",
  "license": "MIT",
  "type": "module",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "xr": "dist/xr.js",
    "xn": "dist/xn.js",
    "x": "dist/x.js"
  },
  "scripts": {
    "build": "tsup",
    "dev:xr": "tsx src/xr.ts",
    "dev:xn": "tsx src/xn.ts",
    "dev:x": "tsx src/x.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "prepublishOnly": "npm run build",
    "release": "x-release"
  },
  "tsup": {
    "entry": [
      "src/xr.ts",
      "src/xn.ts",
      "src/x.ts",
      "src/hooks/register.ts",
      "src/hooks/text.ts",
      "src/hooks/jsonc.ts",
      "src/hooks/yaml.ts",
      "src/hooks/tsx.ts"
    ],
    "format": [
      "esm"
    ],
    "clean": true
  },
  "dependencies": {
    "@0x-jerry/silver": "^1.2.4",
    "@0x-jerry/utils": "^5.0.0",
    "decompress": "^4.2.1",
    "fs-extra": "^11.3.1",
    "global-agent": "^3.0.0",
    "got": "^14.4.8",
    "jsonc-parser": "^3.3.1",
    "ora": "^8.2.0",
    "picocolors": "^1.1.1",
    "prompts": "^2.4.2",
    "strip-json-comments": "^5.0.3",
    "tsx": "^4.20.5",
    "yaml": "^2.8.1"
  },
  "devDependencies": {
    "@0x-jerry/x-release": "^2.4.0",
    "@biomejs/biome": "^2.2.4",
    "@types/decompress": "^4.2.7",
    "@types/fs-extra": "^11.0.4",
    "@types/global-agent": "^3.0.0",
    "@types/node": "^24.3.1",
    "@types/prompts": "^2.4.9",
    "@vitest/coverage-v8": "^3.2.4",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.2.4"
  }
}