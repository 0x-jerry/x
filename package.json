{
  "name": "@0x-jerry/x",
  "version": "2.0.6",
  "main": "index.js",
  "repository": "https://github.com/0x-jerry/x.git",
  "author": "Jerry Wang <x.jerry.wang@gmail.com>",
  "license": "MIT",
  "type": "module",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org",
    "main": "dist/index.js",
    "typings": "dist/index.d.ts"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "xr": "dist/xr.js",
    "xn": "dist/xn.js"
  },
  "scripts": {
    "build": "tsup",
    "dev:xr": "tsx src/xr.ts",
    "dev:xn": "tsx src/xn.ts",
    "release": "x-release"
  },
  "tsup": {
    "entry": [
      "src/xr.ts",
      "src/xn.ts"
    ],
    "format": [
      "esm"
    ],
    "dts": true,
    "clean": true
  },
  "dependencies": {
    "@0x-jerry/silver": "^0.1.3",
    "@0x-jerry/utils": "^2.0.0",
    "execa": "^8.0.1",
    "jsonc-parser": "^3.2.0",
    "picocolors": "^1.0.0"
  },
  "devDependencies": {
    "@0x-jerry/x-release": "^0.3.9",
    "@types/node": "^20.6.2",
    "tsup": "^7.2.0",
    "tsx": "^3.12.10",
    "typescript": "^5.2.2"
  }
}