{
  "name": "@0x-jerry/x",
  "version": "2.4.2",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/0x-jerry/x.git"
  },
  "author": "Jerry Wang <x.jerry.wang@gmail.com>",
  "license": "MIT",
  "type": "module",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org"
  },
  "files": [
    "dist"
  ],
  "bin": {
    "xr": "dist/xr.js",
    "xn": "dist/xn.js",
    "x": "dist/x.js"
  },
  "scripts": {
    "build": "tsup",
    "dev:xr": "tsx src/xr.ts",
    "dev:xn": "tsx src/xn.ts",
    "dev:x": "tsx src/x.ts",
    "test": "vitest",
    "ci:test": "vitest run",
    "prepublishOnly": "npm run build",
    "release": "x-release"
  },
  "tsup": {
    "entry": [
      "src/xr.ts",
      "src/xn.ts",
      "src/x.ts"
    ],
    "format": [
      "esm"
    ],
    "dts": true,
    "clean": true
  },
  "dependencies": {
    "@0x-jerry/silver": "^0.1.7",
    "@0x-jerry/utils": "^2.2.7",
    "decompress": "^4.2.1",
    "fs-extra": "^11.2.0",
    "global-agent": "^3.0.0",
    "got": "^14.2.1",
    "jsonc-parser": "^3.2.1",
    "ora": "^8.0.1",
    "picocolors": "^1.0.1",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@0x-jerry/x-release": "^2.2.2",
    "@types/decompress": "^4.2.7",
    "@types/fs-extra": "^11.0.4",
    "@types/global-agent": "^2.1.3",
    "@types/node": "^20.12.12",
    "@types/prompts": "^2.4.9",
    "@vitest/coverage-v8": "^1.6.0",
    "tsup": "^8.0.2",
    "tsx": "^4.10.4",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  }
}